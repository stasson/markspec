@require './config'

@media print

  html
    font-size 75%

  body:
    font-size 12pt

  body, h1, h2, h3, h4, h5, h6
    color #000

  a
    color: #00008B  
  p a code 
    color: #00008b

  svg.icon.outbound
    display: none

  a[href*='//']:after {
      content:" (" attr(href) ") ";
  }

  .sidebar
    display: none
  .navbar
    display: none
  .page-nav
    display: none

  .markdown-section
    .markdown-section-h1
      page-break-before: always
    .markdown-section-h4 
      page-break-inside: avoid
    .markdown-section-h5 
      page-break-inside: avoid
    .markdown-section-h6 
      page-break-inside: avoid
    pre, blockquote, table
      page-break-inside: avoid
    